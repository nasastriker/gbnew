@import "config.styl"

a
	color inherit
body
	resize none
	overflow-x hidden
	font-family: MuseoSans, sans-serif
.btn-pnk
	background pnk
	color white


.header
	position: relative
	margin-bottom: 40px
	.navigation.navbar-default
		border-radius: 0
		width: 100%
		position: absolute
		background: transparent
		border none
		z-index 20
		.navbar-collapse
			padding 0
			a
				color white
		.second-nav-row
			clear: both
			overflow: hidden
			background: rgba(167, 188, 55, 0.7);
			li
				padding 0 15px
				a
					padding 20px 0
					&.active
						border-bottom 3px solid pnk
			.logo
				display: inline-block
				padding-top 20px
		.navbar-toggle
			position: relative;
			float: left;
			padding: 9px 10px;
			margin-top: 8px;
			margin-left: 15px;
			margin-bottom: 8px;
			background-color: transparent;
			border: none
			border-radius: 0
			.icon-bar
				background: white
	.owl-dots
		display none
	.nav-slider
		z-index: 1
	.header-content
		position: absolute
		width 100%
		z-index: 10
		bottom -50px
		// img
		// 	width 100%
		.title-box
			text-align: right
			color white
			padding-top: 100px
			h1
				text-transform: uppercase
		.carousel-navigation
			margin 40px 0
			a
				width 90px
				height 90px
				display inline-block
				margin: 0 10px
				img
					width 100%
