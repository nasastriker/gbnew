.linear
	position: relative
	margin: 0 -20px
	.container-fluid
		padding: 90px 0
		position: relative
		z-index: 2
		background white
	&.bottom
		&:after
			content: ''
			position: absolute
			height: 150px
			width: 100%
			transform: rotate(-5deg)
			bottom: -80px
			left: 0
			right: 0
			background: #FFF
	&.b-bottom
		&:before
			content: ''
			position: absolute
			height: 150px
			width: 100%
			transform: rotate(5deg)
			bottom: -80px
			left: 0
			right: 0
			background: #FFF
	&.top
		&:after
			content: ''
			position: absolute
			z-index: 1
			height: 150px
			width: 100%
			transform: rotate(-5deg)
			top: -80px
			left: 0
			right: 0
			background: #FFF
			box-shadow: inset 0px 3px 21px 0px rgba(209,209,209,1)
	&.b-top
		&:before
			content: ''
			position: absolute
			height: 150px
			width: 100%
			transform: rotate(5deg)
			top: -80px
			left: 0
			right: 0
			background: #FFF
			box-shadow: inset 0px 3px 21px 0px rgba(209,209,209,1)
